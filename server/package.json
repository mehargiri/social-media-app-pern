{
	"name": "Social-Media-PERN",
	"version": "1.0.0",
	"description": "",
	"main": "app.js",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/server.ts",
		"start": "cross-env NODE_ENV=production node dist/src/server.js",
		"studio": "drizzle-kit studio",
		"build": "del-cli dist && tsc && tsc-alias",
		"postbuild": "del-cli dist/**/*.config.js dist/**/*test* && pnpm cp:migrations && make-dir dist/src/assets",
		"test:unit": "vitest unit --no-isolate",
		"test:integration": "vitest integration --pool=forks --poolOptions.forks.singleFork=true",
		"cp:migrations": "cpy --flat src/db/migrations/*.sql dist/src/db/migrations",
		"db:generate": "pnpm build && drizzle-kit generate --name=init",
		"db:migrate-dev": "cross-env DB_MIGRATING=true tsx src/db/migrate.ts",
		"db:migrate": "cross-env DB_MIGRATING=true node dist/src/db/migrate.js",
		"db:seed": "cross-env DB_SEEDING=true tsx src/db/seed.ts"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"argon2": "^0.43.0",
		"cookie-parser": "^1.4.7",
		"cross-env": "^7.0.3",
		"dotenv": "^16.5.0",
		"dotenv-expand": "^12.0.2",
		"drizzle-orm": "^0.44.1",
		"drizzle-zod": "^0.8.2",
		"express": "^5.1.0",
		"helmet": "^8.1.0",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.0",
		"multer": "2.0.0",
		"postgres": "^3.4.7",
		"short-uuid": "^5.2.0",
		"zod": "^3.25.46"
	},
	"devDependencies": {
		"@eslint/js": "^9.28.0",
		"@faker-js/faker": "^9.8.0",
		"@tsconfig/node-lts": "^22.0.1",
		"@tsconfig/strictest": "^2.0.5",
		"@types/cookie-parser": "^1.4.8",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/express": "^5.0.2",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/morgan": "^1.9.9",
		"@types/multer": "^1.4.12",
		"@types/node": "^22.15.29",
		"@types/supertest": "^6.0.3",
		"@vitest/coverage-v8": "^3.1.4",
		"cpy-cli": "^5.0.0",
		"del-cli": "^6.0.0",
		"drizzle-kit": "^0.31.1",
		"drizzle-seed": "^0.3.1",
		"eslint": "9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"make-dir-cli": "^4.0.0",
		"supertest": "^7.1.1",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.0",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.1.4"
	}
}
