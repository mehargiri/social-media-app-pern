{
	"name": "Social-Media-PERN",
	"version": "1.0.0",
	"description": "",
	"main": "app.js",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/server.ts",
		"start": "cross-env NODE_ENV=production node dist/src/server.js",
		"studio": "drizzle-kit studio",
		"build": "del-cli dist && tsc && tsc-alias",
		"postbuild": "del-cli dist/**/*.config.js dist/**/*test* && pnpm cp:migrations",
		"test:unit": "vitest unit --no-isolate",
		"test:integration": "vitest integration --pool=forks --poolOptions.forks.singleFork=true",
		"cp:migrations": "cpy --flat src/db/migrations/*.sql dist/src/db/migrations",
		"db:generate": "pnpm build && drizzle-kit generate --name=init",
		"db:migrate-dev": "cross-env DB_MIGRATING=true tsx src/db/migrate.ts",
		"db:migrate": "cross-env DB_MIGRATING=true node dist/src/db/migrate.js",
		"db:seed": "cross-env DB_SEEDING=true tsx src/db/seed.ts"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"argon2": "^0.41.1",
		"cookie-parser": "^1.4.7",
		"cpy-cli": "^5.0.0",
		"cross-env": "^7.0.3",
		"del-cli": "^6.0.0",
		"dotenv": "^16.4.7",
		"dotenv-expand": "^12.0.1",
		"drizzle-orm": "^0.38.3",
		"drizzle-zod": "^0.6.1",
		"express": "^5.0.1",
		"helmet": "^8.0.0",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.0",
		"multer": "1.4.5-lts.1",
		"postgres": "^3.4.5",
		"short-uuid": "^5.2.0",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.17.0",
		"@faker-js/faker": "^9.3.0",
		"@tsconfig/node-lts": "^22.0.1",
		"@tsconfig/strictest": "^2.0.5",
		"@types/cookie-parser": "^1.4.8",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/eslint__js": "^8.42.3",
		"@types/express": "^5.0.0",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/morgan": "^1.9.9",
		"@types/multer": "^1.4.12",
		"@types/node": "^22.10.5",
		"@types/supertest": "^6.0.2",
		"drizzle-kit": "^0.30.1",
		"drizzle-seed": "^0.3.0",
		"eslint": "9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"supertest": "^7.0.0",
		"tsc-alias": "^1.8.10",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.19.1",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^2.1.8"
	}
}
